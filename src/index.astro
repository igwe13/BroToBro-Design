<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Shop | Nelly Love Fabrics</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
/* ===== GLOBAL ===== */
*{margin:0;padding:0;box-sizing:border-box;font-family:Arial,sans-serif;}
body{background:#fff;color:#111;}
a{text-decoration:none;color:inherit;}
button{cursor:pointer;}

/* ===== HEADER ===== */
.site-header{position:sticky;top:0;background:white;border-bottom:1px solid #eee;z-index:1000;}
.header-container{display:flex;justify-content:space-between;align-items:center;padding:15px 20px;}
.brand{display:flex;align-items:center;gap:10px;font-weight:bold;font-size:18px;}
.brand img{width:40px;height:40px;object-fit:contain;}
.nav-links{display:flex;align-items:center;}
.nav-links a{margin-left:20px;font-size:14px;}
.btn-nav{border:1px solid #111;padding:6px 14px;border-radius:20px;}
.menu-icon{display:none;font-size:24px;cursor:pointer;}
#menu-toggle{display:none;}

/* ===== HERO SLIDESHOW ===== */
.hero{position:relative;height:50vh;overflow:hidden;margin-bottom:40px;}
.hero-slideshow .slide{position:absolute;top:0;left:0;width:100%;height:100%;display:none;transition:opacity 1s;}
.hero-slideshow .slide.active{display:block;opacity:1;}
.hero-slideshow img{width:100%;height:100%;object-fit:cover;filter:brightness(60%);}
.slide-content{position:absolute;top:50%;left:50%;transform:translate(-50%,-50%);text-align:center;color:white;}
.slide-content h1{font-size:32px;margin-bottom:10px;}
.slide-content p{margin-bottom:20px;font-size:16px;}
.btn-primary{background:white;color:black;padding:12px 25px;border-radius:30px;font-weight:bold;transition:0.3s;}
.btn-primary:hover{background:#f0f0f0;}

/* ===== HOW TO ORDER ===== */
.how-to-order{text-align:center;margin-bottom:40px;padding:20px;border:1px solid #eee;border-radius:10px;background:#f9f9f9;}
.how-to-order h2{margin-bottom:10px;font-size:22px;}
.how-to-order p{margin-bottom:15px;color:#555;font-size:16px;}
.how-to-order .order-buttons a{display:inline-block;margin:5px;padding:12px 25px;border-radius:25px;font-weight:bold;text-decoration:none;transition:0.3s;}
.how-to-order .btn-whatsapp{background:#25D366;color:white;}
.how-to-order .btn-whatsapp:hover{background:#1ebe57;}
.how-to-order .btn-call{background:#111;color:white;}
.how-to-order .btn-call:hover{background:#333;}

/* ===== PRODUCTS ===== */
.products{padding:0 20px;text-align:center;margin-bottom:40px;}
.products h2{margin-bottom:30px;font-size:28px;}
.filters{display:flex;justify-content:center;gap:18px;margin-bottom:45px;flex-wrap:wrap;}
.filters button{background:none;border:none;color:#777;font-size:14px;padding:6px 12px;}
.filters .active{color:#111;font-weight:bold;border-bottom:2px solid #111;}
.grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:36px;margin-bottom:40px;}
.card{border:1px solid #eee;background:#fafafa;border-radius:10px;overflow:hidden;cursor:pointer;transition:transform 0.3s, box-shadow 0.3s;}
.card:hover{transform:translateY(-5px);box-shadow:0 5px 15px rgba(0,0,0,0.1);}
.card img{width:100%;height:250px;object-fit:cover;}
.card h3{padding:10px;font-size:16px;line-height:1.3;word-wrap:break-word;}
.card p{color:#777;font-size:14px;margin:0 10px 10px 10px;}

/* ===== MODAL ===== */
.modal{position:fixed;inset:0;background:rgba(0,0,0,.6);display:none;align-items:center;justify-content:center;z-index:100;}
.modal-box{background:#fff;width:360px;padding:30px;text-align:center;border-radius:10px;}
.modal-box h2{margin-bottom:6px;}
.unit{color:#777;margin-bottom:18px;}
.yard-control{display:flex;justify-content:center;align-items:center;gap:20px;margin:18px 0;}
.yard-control button{width:36px;height:36px;font-size:20px;border:1px solid #ccc;background:#fff;}
.yard-control span{font-size:18px;min-width:30px;text-align:center;}
.total{font-weight:bold;margin-bottom:20px;}
.modal-box .add{background:#111;color:#fff;border:none;padding:12px 26px;border-radius:25px;}

/* ===== FLOATING WHATSAPP ICON ===== */
.floating-whatsapp{
  position:fixed;
  bottom:20px;
  right:20px;
  width:60px;
  height:60px;
  border-radius:50%;
  overflow:hidden;
  box-shadow:0 5px 15px rgba(0,0,0,0.3);
  z-index:1000;
}
.floating-whatsapp img{
  width:100%;
  height:100%;
  object-fit:cover;
}

/* ===== RESPONSIVE ===== */
@media (max-width:768px){
  .menu-icon{display:block;}
  .nav-links{position:absolute;top:65px;right:0;background:white;width:100%;display:none;flex-direction:column;}
  .nav-links a{padding:15px;border-bottom:1px solid #eee;margin:0;}
  #menu-toggle:checked + .menu-icon + .nav-links{display:flex;}
  .card h3{font-size:14px;}
  .card p{font-size:13px;}
  .filters button{padding:4px 8px;font-size:12px;}
}
</style>
</head>
<body>

<!-- ===== HEADER ===== -->
<header class="site-header">
  <div class="header-container">
    <div class="brand">
      <img src="logo.png" alt="Nelly Love Fabrics Logo">
      <span>Nelly Love Fabrics</span>
    </div>

    <input type="checkbox" id="menu-toggle">
    <label for="menu-toggle" class="menu-icon">☰</label>

    <nav class="nav-links">
      <a href="index.html">Home</a>
      <a href="shop.html">Shop</a>
      <a href="cart.html">Cart</a>
      <a href="login.html" class="btn-nav">Login</a>
    </nav>
  </div>
</header>

<!-- ===== HERO ===== -->
<section class="hero">
  <div class="hero-slideshow">
    <div class="slide active">
      <img src="hero1.jpg" alt="Luxury Fabrics">
      <div class="slide-content">
        <h1>Luxury Fabrics for Elegant Fashion</h1>
        <p>Lace • Beaded Lace • Brocade • Damask • Bridal Satin</p>
        <a href="#productGrid" class="btn-primary">Shop Now</a>
      </div>
    </div>
    <div class="slide">
      <img src="hero2.jpg" alt="Lace Fabrics">
      <div class="slide-content">
        <h1>Beautiful Lace Collections</h1>
        <p>Perfect for all occasions</p>
        <a href="#productGrid" class="btn-primary">Shop Now</a>
      </div>
    </div>
    <div class="slide">
      <img src="hero3.jpg" alt="Bridal Satin">
      <div class="slide-content">
        <h1>Elegant Bridal Satin</h1>
        <p>Soft and luxurious for weddings</p>
        <a href="#productGrid" class="btn-primary">Shop Now</a>
      </div>
    </div>
  </div>
</section>

<!-- ===== HOW TO ORDER ===== -->
<section class="how-to-order container">
  <h2>Want to Order Directly?</h2>
  <p>You can order via WhatsApp or call us for fast delivery.</p>
  <div class="order-buttons">
    <a href="https://wa.me/2347060721982" class="btn-whatsapp">WhatsApp Us</a>
    <a href="tel:07079931724" class="btn-call">Call Now</a>
  </div>
</section>

<!-- ===== FILTERS ===== -->
<div class="filters container" id="filters"></div>

<!-- ===== PRODUCTS GRID ===== -->
<section class="grid container" id="productGrid"></section>

<!-- ===== MODAL ===== -->
<div class="modal" id="modal">
  <div class="modal-box">
    <h2 id="modalName"></h2>
    <p class="unit">₦<span id="unitPrice"></span> / yard</p>
    <div class="yard-control">
      <button onclick="changeYard(-1)">−</button>
      <span id="yardQty">1</span>
      <button onclick="changeYard(1)">+</button>
    </div>
    <p class="total">Total: ₦<span id="totalPrice"></span></p>
    <button class="add" onclick="addToCart()">Add to Cart</button>
  </div>
</div>

<!-- ===== FLOATING WHATSAPP ICON ===== -->
<a href="https://wa.me/2347060721982" class="floating-whatsapp" target="_blank">
  <img src="data:image/png;base64," alt="WhatsApp">
</a>

<script>
/* ================= DATA ================= */
const PRODUCTS = [
  {id:1,name:"Luxury White Garments",price:12000,category:"luxury",image:"images/products/luxury-white.jpg"},
  {id:2,name:"Lace Fabric",price:8500,category:"lace",image:"images/products/lace.jpg"},
  {id:3,name:"Beaded Lace",price:15000,category:"lace",image:"images/products/beaded-lace.jpg"},
  {id:4,name:"Damask",price:13000,category:"damask",image:"images/products/damask.jpg"},
  {id:5,name:"Brocade",price:14000,category:"brocade",image:"images/products/brocade.jpg"},
  {id:6,name:"Pongee Lining",price:7500,category:"lining",image:"images/products/pongee.jpg"},
  {id:7,name:"Dullface Bridal Satin",price:11000,category:"satin",image:"images/products/bridal-satin.jpg"},
  {id:8,name:"Shinning Face",price:11500,category:"satin",image:"images/products/shining-face.jpg"},
];

/* ================= STATE ================= */
const state = { category: "all", selected: null, yards: 1 };

/* ================= ELEMENTS ================= */
const grid = document.getElementById("productGrid");
const filters = document.getElementById("filters");
const modal = document.getElementById("modal");

/* ================= RENDER ================= */
function renderProducts(){
  grid.innerHTML = "";
  PRODUCTS.filter(p => state.category === "all" || p.category === state.category)
    .forEach(p => {
      const card = document.createElement("div");
      card.className = "card";
      card.innerHTML = `<img src="${p.image}"><h3>${p.name}</h3><p>₦${p.price.toLocaleString()} / yard</p>`;
      card.onclick = () => openModal(p);
      grid.appendChild(card);
    });
}

function renderFilters(){
  const cats = ["all", ...new Set(PRODUCTS.map(p=>p.category))];
  filters.innerHTML = "";
  cats.forEach(cat=>{
    const btn=document.createElement("button");
    btn.textContent=cat.toUpperCase();
    if(cat===state.category) btn.classList.add("active");
    btn.onclick=()=>{
      state.category=cat;
      renderFilters();
      renderProducts();
    };
    filters.appendChild(btn);
  });
}

/* ================= MODAL LOGIC ================= */
function openModal(product){
  state.selected=product;
  state.yards=1;
  document.getElementById("modalName").textContent=product.name;
  document.getElementById("unitPrice").textContent=product.price.toLocaleString();
  updateTotal();
  modal.style.display="flex";
}

function changeYard(step){
  state.yards+=step;
  if(state.yards<1) state.yards=1;
  updateTotal();
}

function updateTotal(){
  document.getElementById("yardQty").textContent=state.yards;
  document.getElementById("totalPrice").textContent=(state.yards*state.selected.price).toLocaleString();
}

function addToCart(){
  alert(`${state.selected.name}\nYards: ${state.yards}\nTotal: ₦${(state.yards*state.selected.price).toLocaleString()}`);
  modal.style.display="none";
}

/* ================= HERO SLIDESHOW ================= */
const slides=document.querySelectorAll('.slide');
let currentSlide=0;
function showSlide(index){slides.forEach((s,i)=>s.classList.remove('active'));slides[index].classList.add('active');}
function nextSlide(){currentSlide=(currentSlide+1)%slides.length;showSlide(currentSlide);}
setInterval(nextSlide,5000);

/* ================= INIT ================= */
renderFilters();
renderProducts();
</script>
</body>
</html>


